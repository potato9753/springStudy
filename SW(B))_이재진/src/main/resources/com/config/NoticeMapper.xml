<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="NoticeMapper">
   
    <select id="noticeList" resultType="notice">
      select 
      	no,
      	title,
      	author,
      	content,
      	to_char(writeday,'YYYY/MM/dd') as writeday,
      	readcnt
      from notice
      order by no desc
    </select>
    
    <select id="selectByNo" parameterType="int" resultType="notice" >
       select 
      	no,
      	title,
      	author,
      	content,
      	writeday,
      	readcnt
      from notice
      where no = #{no}
    </select>

     <insert id="noticeWrite" parameterType="notice">
        insert into notice (no,title,author,content)
        values ( notice_no.nextval, #{title}, #{author}, #{content})
     </insert>
     
     <update id="noticeUpdate" parameterType="notice">
        update notice
        set title=#{title}, author=#{author}, content=#{content}
        where no=#{no}
     </update>
     
     <delete id="noticeDelete" parameterType="int">
       delete from notice
       where no=#{no}
     </delete>
     
     <update id="readcnt" parameterType="int">
       update Notice
       set readcnt = readcnt  + 1
       where no = #{no}
     </update>
     
</mapper>






